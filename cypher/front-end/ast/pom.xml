    <dependency>
      <groupId>io.bigconnect</groupId>
      <artifactId>cypher-frontend-util</artifactId>
      <version>${project.version}</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>io.bigconnect</groupId>
      <artifactId>cypher-frontend-expressions</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>io.bigconnect</groupId>
      <artifactId>cypher-frontend-expressions</artifactId>
